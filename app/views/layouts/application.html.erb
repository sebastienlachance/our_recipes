<!DOCTYPE html>
<html>
<head>
  <title>Nos recettes!</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
   <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="<%= root_url %>">Nos recettes!</a>

            <%= form_tag recipes_path, method: :get, :class => 'navbar-form pull-right' do %>

              <%= text_field_tag :query, params[:query], :class => 'span2', :style => '' %>
              <%= submit_tag "Recherche", name: nil, :class => 'btn btn-primary' %>

            <% end %>
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>


    </div> <!-- /container -->
  
</body>
</html>
